 @model IEnumerable<Category>

<h2>Category List</h2>
<a href="@Url.Action("Create")" class="btn btn-primary">Add Category</a>
<table class="table">
    <thead>
        <tr>
            <th>Category ID</th>
            <th>Category Name</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var category in Model)
        {
            <tr>
                <td>@category.CategoryId</td>
                <td>@category.CategoryName</td>
                <td>
                    <a href="@Url.Action("Edit", new { id = category.CategoryId })">Edit</a> |
                    <a href="@Url.Action("Delete", new { id = category.CategoryId })">Delete</a> |
                    <a href="@Url.Action("Details", new { id = category.CategoryId })">Details</a>
                </td>
            </tr>
        }
    </tbody>
</table>


